<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jakubaniola.patientcard.qrreader.QRReaderActivity">

    <com.example.jakubaniola.patientcard.customviews.TitilliumSemiBoldTextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/scan_patient_qr_code"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"/>

    <SurfaceView
        android:id="@+id/qr_reader_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
