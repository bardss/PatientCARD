<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jakubaniola.patientcard.qrreader.QRReaderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <View
            android:id="@+id/top_accent_view"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/colorAccent" />

        <ImageView
            android:id="@+id/patient_avatar_image_view"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/patient_avatar"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"/>

        <com.example.jakubaniola.patientcard.customviews.TitilliumLightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_placeholder"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_alignBottom="@id/top_accent_view"
            android:layout_toEndOf="@id/patient_avatar_image_view"
            android:layout_marginStart="10dp"/>

        <com.example.jakubaniola.patientcard.customviews.TitilliumLightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pesel_placeholder"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:layout_below="@id/top_accent_view"
            android:layout_toEndOf="@id/patient_avatar_image_view"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>

</RelativeLayout>
