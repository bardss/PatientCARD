<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <View
            android:id="@+id/topAccentView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/colorAccent" />

        <ImageView
            android:id="@+id/patientAvatarImageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:src="@drawable/rounded_observations_icon" />

        <com.patientcard.customviews.TitilliumLightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/topAccentView"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/patientAvatarImageView"
            android:text="@string/name_placeholder"
            android:textColor="@android:color/white"
            android:textSize="21sp" />

        <com.patientcard.customviews.TitilliumLightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topAccentView"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/patientAvatarImageView"
            android:text="@string/medical_observation_card"
            android:textColor="@android:color/black"
            android:textSize="19sp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/observationsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
